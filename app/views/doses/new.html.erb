<div class="container">
  <h1>Add ingredient for a <%= @cocktail.name %></h1>

  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

  <br>

  <%= link_to 'Back', cocktail_path(@cocktail) %>

</div>
