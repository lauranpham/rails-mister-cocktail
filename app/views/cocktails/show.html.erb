<div class="container">
  <h1><%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> <%= dose.ingredient.name %></p>
    <p><%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>

  <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>

  <br>

  <%= link_to "Back", cocktails_path %>
</div>
