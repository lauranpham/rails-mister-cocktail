<div class="container cocktail-show">
  <h1 class="heading"><%= @cocktail.name %></h1>
  <% if @cocktail.photo.attached? %>
    <%=  cl_image_tag(@cocktail.photo.key, height: 300, width: 330, crop: :fill) %>
  <% end %>

  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %> <%= dose.ingredient.name %></p>
    <p> <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>

  <div class="button-div">
    <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: "cocktail-btn" %>
    <%= link_to "Back", cocktails_path, class: "ghost-btn" %>
  </div>

</div>
