<div class="container">
  <h1 class="heading">New Cocktail</h1>

  <div class="container">
    <%= simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file%>
      <%= f.submit class: "cocktail-btn" %>
    <% end %>

    <br>

    <%= link_to "Back", cocktails_path, class: "ghost-btn" %>
  </div>

</div>
